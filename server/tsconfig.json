{
  "compilerOptions": {
    "target": "ES2018",
    "module": "NodeNext",
    "lib": [
      "ES6"
    ],
    "rootDir": "./src",
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "lib": [
    "esnext"
  ],
  "ts-node": {
    "esm": true
  }
}